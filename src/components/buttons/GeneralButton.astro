---
type ButtonTypes = {
  as?: "a" | "button";
  class?: string;
} & Record<string, any>;

const {
  as: Tag = "button",
  class: classList,
  ...props
} = Astro.props as ButtonTypes;
---

<Tag
  class={`px-4 py-2 border border-zinc-500 rounded-md inline-block hover:text-cyan-500 transition duration-150 hover:border-cyan-500 hover:bg-gray-900 cursor-pointer ${classList}`}
  {...props}
  ><slot />
</Tag>
