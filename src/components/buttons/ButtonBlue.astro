---
type ButtonTypes = {
  as?: "a" | "button";
  class?: string;
} & Record<string, any>;

const {
  as: Tag = "button",
  class: classList,
  ...props
} = Astro.props as ButtonTypes;
---

<Tag
  class={`px-4 py-2 border border-cyan-500 bg-cyan-800/20 rounded-md transition duration-150 hover:border-cyan-500 hover:bg-cyan-600 ${classList}`}
  {...props}
  ><slot />
</Tag>
