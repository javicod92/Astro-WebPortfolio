---
import TechnologyCard from "../components/technologyCard/TechnologyCard.astro";
import AstroIcon from "../icons/AstroIcon.astro";
import CSSModules from "../icons/CSSModules.astro";
import Html5 from "../icons/Html5.astro";
import JavaScript from "../icons/JavaScript.astro";
import Nextjs from "../icons/Nextjs.astro";
import React from "../icons/React.astro";
import TailwindCSS from "../icons/TailwindCSS.astro";
import Tool from "../icons/Tool.astro";
import TypeScript from "../icons/TypeScript.astro";
import GeneralContainer from "../utils/GeneralContainer.astro";
import HighLight from "../utils/HighLight.astro";
---

<section
  id="skills"
  class="relative w-full min-h-screen h-full px-5 py-12 flex flex-col justify-center items-center"
>
  <GeneralContainer class="flex flex-row gap-12">
    <!-- Skills Description -->
    <div class="flex flex-col gap-6 w-1/2">
      <div>
        <h3 class="font-medium text-zinc-400 flex items-center gap-2">
          <Tool class="size-6" />My Skills
        </h3>
        <h2 class="mt-1 font-semibold">
          Let's explore my most popular
          <span class="text-cyan-500"> skills & experience </span>
        </h2>
      </div>
      <p class="mt-2 text-pretty border-l-4 border-cyan-600 pl-4">
        I'm a developer with experience in <HighLight>React, Next.js,</HighLight
        > and <HighLight>Astro,</HighLight>using
        <HighLight>Tailwind CSS</HighLight> and <HighLight
          >CSS Modules</HighLight
        > for styling.
      </p>
      <p class="mt-2 text-pretty border-l-4 border-cyan-600 pl-4">
        On the backend, I work with <HighLight>MongoDB</HighLight> and integrate
        tools like <HighLight>Axios, Zod, Resend,</HighLight> and <HighLight
          >Framer Motion</HighLight
        >.
      </p>
      <p class="mt-2 text-pretty border-l-4 border-cyan-600 pl-4">
        I manage <HighLight>Git/GitHub</HighLight> and deploy projects in <HighLight
          >Vercel,</HighLight
        ><HighLight>prioritizing modular and scalable code.</HighLight>
      </p>
    </div>

    <!-- Skills Cards -->
    <!-- Skills Cards -->
    <div class="w-1/2 flex items-center">
      <div
        class="grid grid-cols-[repeat(auto-fit,minmax(120px,1fr))] gap-4 grow"
      >
        <TechnologyCard>
          <React class="size-14" />
          <p><span class="font-medium text-base">React</span></p>
        </TechnologyCard>
        <TechnologyCard>
          <Nextjs class="size-14" />
          <p><span class="font-medium text-base">Next.js</span></p>
        </TechnologyCard>
        <TechnologyCard>
          <AstroIcon class="size-14" />
          <p><span class="font-medium text-base">Astro</span></p>
        </TechnologyCard>
        <TechnologyCard>
          <Html5 class="size-14" />
          <p><span class="font-medium text-base">HTML 5</span></p>
        </TechnologyCard>
        <TechnologyCard>
          <TailwindCSS class="size-14" />
          <p><span class="font-medium text-base">Tailwind CSS</span></p>
        </TechnologyCard>
        <TechnologyCard>
          <CSSModules class="size-14" />
          <p><span class="font-medium text-base">CSS Modules</span></p>
        </TechnologyCard>
        <TechnologyCard>
          <JavaScript class="size-14" />
          <p><span class="font-medium text-base">JavaScript</span></p>
        </TechnologyCard>
        <TechnologyCard>
          <TypeScript class="size-14" />
          <p><span class="font-medium text-base">TypeScript</span></p>
        </TechnologyCard>
      </div>
    </div>
  </GeneralContainer>
</section>
