---
import AstroIcon from "../../icons/AstroIcon.astro";
import Axios from "../../icons/Axios.astro";
import CSS3 from "../../icons/CSS3.astro";
import Github from "../../icons/Github.astro";
import LinkedIn from "../../icons/LinkedIn.astro";
import Mail from "../../icons/Mail.astro";
import Resend from "../../icons/Resend.astro";
import TailwindCSS from "../../icons/TailwindCSS.astro";
import { translations } from "../../translations/i18n";

const lang = (Astro.locals as { lang: "en" | "es" }).lang || "en";
const t = translations.FOOTER[lang];
---

<footer class="w-full bg-[#131313] p-10 text-gray-300">
  <div
    class="mx-auto max-w-[1200px] grid grid-cols-1 lg:grid-cols-[repeat(3,1fr)] gap-20 text-center lg:text-left"
  >
    <!-- Social Links -->
    <div>
      <h4
        class="lg:border-b border-gray-600 pb-2 text-cyan-500 text-lg font-semibold"
      >
        {t.findme}
      </h4>
      <ul class="mt-4 flex justify-center lg:justify-start gap-4">
        <li>
          <a
            href="https://github.com/javicod92"
            class="border border-gray-600 p-2 rounded-full inline-flex items-center justify-center size-10 bg-zinc-800 hover:text-cyan-500 hover:shadow-[0_0_20px_5px_#185367] transition duration-150 hover:border-cyan-500"
            target="_blank"
            title="Github"
            aria-label="Github"
          >
            <Github class="size-6" />
          </a>
        </li>
        <li>
          <a
            href="https://linkedin.com/in/aldo-javier-codutti"
            class="border border-gray-600 p-2 rounded-full inline-flex items-center justify-center size-10 bg-zinc-800 hover:text-cyan-500 hover:shadow-[0_0_20px_5px_#185367] transition duration-150 hover:border-cyan-500"
            target="_blank"
            title="LinkedIn"
            aria-label="LinkedIn"
          >
            <LinkedIn class="size-6" />
          </a>
        </li>
        <li>
          <a
            href="mailto:javi.javier.jc@gmail.com"
            class="border border-gray-600 p-2 rounded-full inline-flex items-center justify-center size-10 bg-zinc-800 hover:text-cyan-500 hover:shadow-[0_0_20px_5px_#185367] transition duration-150 hover:border-cyan-500"
            title="Email"
            aria-label="Email"
          >
            <Mail class="size-6" />
          </a>
        </li>
      </ul>
    </div>

    <!-- Navigation Links -->
    <div>
      <h4
        class="lg:border-b border-gray-600 pb-2 text-cyan-500 text-lg font-semibold"
      >
        {t.navigation.title}
      </h4>
      <nav class="mt-4 flex flex-col justify-center md:flex-row gap-4">
        <a href="#home" class="hover:text-cyan-400 transition"
          >{t.navigation.home}</a
        >
        <a href="#about" class="hover:text-cyan-400 transition"
          >{t.navigation.about}</a
        >
        <a href="#skills" class="hover:text-cyan-400 transition"
          >{t.navigation.skills}</a
        >
        <a href="#portfolio" class="hover:text-cyan-400 transition"
          >{t.navigation.portfolio}</a
        >
        <a href="#projects" class="hover:text-cyan-400 transition"
          >{t.navigation.projects}</a
        >
        <a href="#contact" class="hover:text-cyan-400 transition"
          >{t.navigation.contact}</a
        >
      </nav>
    </div>

    <!-- Built With -->
    <div>
      <h4
        class="lg:border-b border-gray-600 text-cyan-500 pb-2 text-lg font-semibold"
      >
        {t.built}
      </h4>
      <div class="mt-4 flex justify-center lg:justify-start gap-4">
        <AstroIcon class="size-6" title="Astro" />
        <TailwindCSS class="size-6" />
        <CSS3 class="size-6" />
        <Resend class="size-6" />
        <Axios class="h-5 w-6" />
      </div>
    </div>
  </div>

  <!-- Copyright -->
  <div class="mt-6 text-center">
    <h4 class="text-gray-400">
      <span class="font-semibold text-lg">Â© 2025 - Javier Codutti</span>
    </h4>
  </div>
</footer>
