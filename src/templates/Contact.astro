---
import Send from "../icons/Send.astro";
import GeneralContainer from "../utils/GeneralContainer.astro";
---

<section
  id="contact"
  class="relative w-full min-h-screen h-full px-5 py-24 flex flex-col justify-center items-center"
  aria-labelledby="contact-heading"
>
  <GeneralContainer class="flex items-center justify-center max-w-2/3">
    <div class="max-w-2/3 w-full justify-center items-center">
      <!-- Page Titles -->
      <div>
        <h3
          class="font-medium text-zinc-400 flex items-center gap-2"
          id="portfolio-heading"
        >
          <Send class="size-8" />Contact Me! ðŸ˜€
        </h3>
        <h2 class="mt-1 font-semibold">
          Do you like what you see?
          <span class="text-cyan-500">Let's work together!</span>
        </h2>
      </div>
    </div>
  </GeneralContainer>
</section>

<style>
  section::before {
    content: "";
    width: 100%;
    height: 100%;
    position: absolute;
    background-image: url("/contact_bg.webp");
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    opacity: 0.8;
    z-index: -10;
  }
</style>