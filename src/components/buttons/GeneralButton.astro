---
type ButtonTypes = {
  href: string;
};

const { href } = Astro.props as ButtonTypes;
---

<a
  class="mt-6 px-4 py-2 border border-zinc-500 rounded-md inline-block hover:text-cyan-500 transition duration-150 hover:border-cyan-500 hover:bg-gray-900"
  href={href}
  target="_blank"
  ><slot />
</a>
